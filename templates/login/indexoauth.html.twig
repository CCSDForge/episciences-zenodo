{% extends 'base.html.twig' %}

{% block title %}Link Zenodo to App{% endblock %}

{% block body %}
    {% include './navbar/navbar.html.twig' %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger text-center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="d-flex align-items-center justify-content-center vh-100 flex-column">
        {#https://about.zenodo.org/static/img/logos/zenodo-gradient-1000.png#}
        <h1 class=" font-weight-normal text-center"><img src="https://about.zenodo.org/static/img/logos/zenodo-gradient-round.svg" alt="zenodo-logo" width="80%" height="auto"> </h1>
        <a class="btn btn-outline-info btn-lg d-block w-50" href="{{ path('oauth_zenodo_authorization') }}">Link Zenodo account to the application</a>
    </div>
{% endblock %}
